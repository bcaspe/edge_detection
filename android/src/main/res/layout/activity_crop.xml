<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Left group of buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <!-- Row 1: Black/White and Rotate -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/black_white"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_invert_colors"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/rotate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_rotate"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Row 2: Threshold Controls -->
        <LinearLayout
            android:id="@+id/threshold_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/threshold_down"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_remove"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/threshold_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginHorizontal="8dp"
                android:text="15" />

            <ImageView
                android:id="@+id/threshold_up"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_button"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_add"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Done button -->
    <ImageView
        android:id="@+id/done"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/round_button"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_done"
        app:tint="@android:color/white" />

</RelativeLayout>
